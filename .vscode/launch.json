	"version": "0.2.0",
	"configurations": [
		{
			"name": "Chunker CLI",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/sdw/chunker-cli/chunker",
			"args": ["--chunkInfo", "out.chunk"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/bin/sdw/chunker-cli/",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "Geometry Viewer",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/sdw/shadow-engine/geometryv",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/sdw/shadow-engine/Shadow",
			"args": [
				"axeEditor"
				// "axe"
				// "dev"
				// "editorwis"
				// "SlimEditor", "/home/vince/.config/Shadow/Projects/WIS/Content/Scenes/mesh.scene"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/bin/sdw/shadow-engine",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		}
	]
}